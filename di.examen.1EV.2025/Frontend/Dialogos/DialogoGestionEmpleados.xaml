<Window x:Class="di.examen._1EV._2025.Frontend.Dialogos.DialogoGestionEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.examen._1EV._2025.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="DialogoGestionEmpleados" Height="500" Width="600" Background="#f5f5f5">
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />

            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="GESTIÓN DE EMPLEADOS" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="25" 
                       FontWeight="Bold" />
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Text="Los campos obligatorios se marcan en negrita"
                       FontWeight="Bold"
                       Margin="10,0,0,0" />
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Text="DATOS PERSONALES"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Bottom"
                       Margin="20,0,0,0" />
            
            <Separator VerticalAlignment="Bottom"
                       Margin="10,0,10,0"/>
            
        </Grid>

        <Grid Grid.Row="3">

            <Grid.RowDefinitions>
                
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Nombre:"
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="32,0,50,0"
                           VerticalAlignment="Bottom" />
            </Grid>

            <Grid Grid.Column="0" Grid.Row="1">
                <TextBox VerticalAlignment="Top"
                         Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="2">
                <TextBlock Text="Segundo apellido:"
                         FontSize="12"
                         Margin="32,0,40,0"
                         VerticalAlignment="Bottom" />
            </Grid>

            <Grid Grid.Column="0" Grid.Row="3">
                <TextBox VerticalAlignment="Top"
                       Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0">
                <TextBlock Text="Primer apellido:"
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="40,0,32,0"
                           VerticalAlignment="Bottom" />
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <TextBox VerticalAlignment="Top"
                         Margin="40,0,32,0"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="2">
                <TextBlock Text="Correo electrónico"
                         FontSize="12"
                         FontWeight="Bold"
                         Margin="40,0,32,0"
                         VerticalAlignment="Bottom" />
            </Grid>

            <Grid Grid.Column="1" Grid.Row="3">
                <TextBox VerticalAlignment="Top"
                       Margin="40,0,32,0"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="4">
            <TextBlock Text="DATOS PROFESIONALES"
               FontSize="18"
               FontWeight="SemiBold"
               VerticalAlignment="Bottom"
               Margin="20,0,0,0" />

            <Separator VerticalAlignment="Bottom"
               Margin="10,0,10,0"/>

        </Grid>

        <Grid Grid.Row="5">

            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Extensión:"
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="32,0,50,0"
                           VerticalAlignment="Bottom" />
                
            </Grid>

            <Grid Grid.Column="0" Grid.Row="1">
                <TextBox VerticalAlignment="Top"
                         Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="2">
                <TextBlock Text="Jefe:"
               FontSize="12"
               Margin="32,0,50,0"
               VerticalAlignment="Bottom" />

            </Grid>

            <Grid Grid.Column="0" Grid.Row="3">
                <ComboBox VerticalAlignment="Top"
                         Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0">
                <TextBlock Text="Puesto:"
                           FontSize="12"
                           Margin="32,0,50,0"
                           VerticalAlignment="Bottom" />

            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <TextBox VerticalAlignment="Top"
                         Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="2">
                <TextBlock Text="Oficina:"
                           FontSize="12"
                           Margin="32,0,50,0"
                           VerticalAlignment="Bottom" />

            </Grid>

            <Grid Grid.Column="1" Grid.Row="3">
                <ComboBox VerticalAlignment="Top"
                          Margin="32,0,40,0"/>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="4">
                <Button Width="100"
                            HorizontalAlignment="Right"
                            Margin="0,0,40,10"
                            Background="Transparent"
                            BorderBrush="Red">
                    <TextBlock Text="Cancelar"
                                   Foreground="Red"
                                   FontWeight="Bold" />
                </Button>

            </Grid>

            <Grid Grid.Column="1" Grid.Row="4">
                <Button Width="100"
                            HorizontalAlignment="Left"
                            Margin="30,0,0,10"
                            Background="#6266f7">
                    <TextBlock Text="Cancelar"
                                   Foreground="White"
                                   FontWeight="Bold" />
                </Button>

            </Grid>



        </Grid>

    </Grid>
</Window>
